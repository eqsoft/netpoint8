#!/bin/bash

OPTS=""
PROFILE="/home/${username}/ffprofile"

# populate firefox profile
firefox -silent -profile ${PROFILE}

sleep 2

# copy custom profile files
cp -a /etc/firefox/profile/* ${PROFILE}

if [ ! -z "${xbrowseropts}" ]
then
	# replace options "," with " ". Don't delete trailing " " from OPTS=" $...."!
	OPTS=" ${xbrowseropts//,/ }"
fi

if [ "${xbrowser}" == "firefox" ]
then
	while [ ! $(pidof firefox) ] ; do
		`firefox -profile ${PROFILE}${OPTS}`
	done
fi

if [ "${xbrowser}" == "seb" ]
then
	echo "try starting seb..."
	while [ ! $(pidof firefox) ] ; do
		`firefox -app /opt/browser/app/seb.ini -profile ${PROFILE}${OPTS}`
	done
fi
